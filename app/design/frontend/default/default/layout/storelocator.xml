<?xml version="1.0"?>   
<layout version="0.1.0">   

    <default>
        <reference name="top.links">
            <action method="setTemplate" ifconfig="storelocator/settings/toplinks">
                <template>storelocator/links.phtml</template>
            </action>
        </reference>
    </default> 

    <storelocator_index_index> 
        <reference name="head">  
            <action method="addCss">
                <stylesheet>storelocator/css/map.css</stylesheet>
            </action>
            <action method="addJs">
                <script>storelocator/jquery-1.10.1.min.js</script>
            </action>
            <action method="addJs">
                <script>storelocator/noConflict.js</script>
            </action>	
            <action method="addJs">
                <script>storelocator/handlebars-1.0.0.min.js</script>
            </action>
            <block type="core/text" name="google.cdn.jquery"> 
                <action method="setText">
                    <text><![CDATA[<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><script type="text/javascript">jQuery.noConflict();</script>]]>
                    </text>
                </action>
            </block>
            <action method="addJs">
                <script>storelocator/jquery.storelocator.js</script>
            </action>
        </reference>
        <reference name="root">   
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>   
        </reference>   
        <reference name="content">   
            <block type="storelocator/index" name="storelocator_index" template="storelocator/index.phtml"/>   
        </reference>   
    </storelocator_index_index>   
</layout>

